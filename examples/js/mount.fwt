using dom
using gfx
using fwt

**
** Used with `mount.fan`
**
class FwtMountDemoWin : Window
{
  new make() : super(null, null)
  {
    content = BorderPane
    {
      insets = Insets(12)
      border = Border("2 #080 10")
      Label { text="And this is our FWT widget! (run w/ mount.fan - NOT demo.fan)" },
    }
  }

  Void main() { open }
}

